<%= link_to 'Add a Todo', new_todo_path %>

<ul>
  <% @todos.each do |todo| %>
    <li class='<%= 'complete' if todo.completed? %>'>
      <%= todo.title %>
      <% if todo.completed? %>
        <%= link_to 'Mark incomplete', todo_completion_path(todo), method: :delete %>
      <% else %>
        <%= link_to 'Mark complete', todo_completion_path(todo), method: :post %>
      <% end %>
    </li>
  <% end %>
</ul>
